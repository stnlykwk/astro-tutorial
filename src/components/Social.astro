---
const { platform, username } = Astro.props;
const isLinkedIn = platform === "linkedin";
---

<a href={`https://www.${platform}.com/${isLinkedIn ? "in/" : ""}${username}`}
  >{platform}</a
>
<style>
  a {
    padding: 0.5rem 1rem;
    color: white;
    background-color: #4c1d95;
    text-decoration: none;
  }
</style>
